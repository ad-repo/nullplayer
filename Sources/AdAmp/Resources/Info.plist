<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    <key>CFBundleExecutable</key>
    <string>AdAmp</string>
    <key>CFBundleIdentifier</key>
    <string>com.adamp.player</string>
    <key>CFBundleName</key>
    <string>AdAmp</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleIconFile</key>
    <string>AppIcon</string>
    <key>CFBundleShortVersionString</key>
    <string>0.9.1</string>
    <key>CFBundleVersion</key>
    <string>2</string>
    <key>LSMinimumSystemVersion</key>
    <string>12.0</string>
    <key>NSHighResolutionCapable</key>
    <true/>
    
    <!-- Local Network Access -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>AdAmp needs access to your local network to discover and cast audio to Chromecast, Sonos, and DLNA devices.</string>
    
    <!-- Bonjour Services for Device Discovery -->
    <key>NSBonjourServices</key>
    <array>
        <!-- Chromecast devices -->
        <string>_googlecast._tcp</string>
        <!-- AirPlay devices (existing) -->
        <string>_airplay._tcp</string>
        <!-- RAOP (Remote Audio Output Protocol) -->
        <string>_raop._tcp</string>
    </array>
    
    <!-- App Transport Security for local network communication -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsLocalNetworking</key>
        <true/>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>
    
    <!-- Privacy descriptions for potential future features -->
    <key>NSMicrophoneUsageDescription</key>
    <string>AdAmp may use the microphone for audio input features.</string>
    
    <!-- Document Types - Audio file associations -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Audio File</string>
            <key>CFBundleTypeRole</key>
            <string>Viewer</string>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.audio</string>
                <string>public.mp3</string>
                <string>public.mpeg-4-audio</string>
                <string>public.aiff-audio</string>
                <string>com.microsoft.waveform-audio</string>
                <string>org.xiph.flac</string>
                <string>org.xiph.ogg-vorbis</string>
            </array>
        </dict>
    </array>
</dict>
</plist>
